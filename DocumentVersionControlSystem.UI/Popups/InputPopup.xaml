<Window x:Class="DocumentVersionControlSystem.UI.Popups.InputPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Information" Height="160" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" KeyDown="Window_KeyDown" Icon="../images/icon.png">
    <Grid>
        <!-- Заголовок -->
        <TextBlock x:Name="TitleText" Text="" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <!-- Розділювач -->
        <GridSplitter Height="1.5" Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,40,0,0" Cursor="Arrow" />
        <!-- Текст повідомлення -->
        <TextBox x:Name="MessageText" FontSize="14" TextAlignment="Left" Margin="10,50,10,40" VerticalAlignment="Center" MaxLength="100"/>

        <!-- Кнопка "OK" -->
        <Button Content="Cancel" Width="80" Height="25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,10,0,10" Click="CancelButton_Click" Style="{StaticResource CustomButtonStyle}"/>
        <Button Content="Confirm" Width="80" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,50,10" Click="ConfirmButton_Click" Style="{StaticResource CustomButtonStyle}"/>

    </Grid>
</Window>