<Window x:Class="DocumentVersionControlSystem.UI.Popups.InfoPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Information" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" KeyDown="Window_KeyDown"
        SizeToContent="Height" MinHeight="160">
    <Grid>
        <!-- Заголовок -->
        <TextBlock x:Name="TitleText" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <!-- Розділювач -->
        <GridSplitter Height="1.5" Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,40,0,0" Cursor="Arrow" />
        
        <!-- Текст повідомлення -->
        <TextBlock x:Name="MessageText" FontSize="14" TextWrapping="Wrap" TextAlignment="Center" Margin="10,50,10,50" />

        <!-- Кнопка "OK" -->
        <Button Content="OK" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10" Click="OkButton_Click" Style="{StaticResource CustomButtonStyle}"/>
    </Grid>
</Window>