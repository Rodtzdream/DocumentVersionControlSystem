<Page x:Class="DocumentVersionControlSystem.UI.Windows.DocumentViewerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentVersionControlSystem.UI.Windows"
        mc:Ignorable="d"
      d:DesignHeight="515" d:DesignWidth="850"
        Title="DocumentViewer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="203" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox x:Name="TextBox" IsReadOnly="True" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Margin="10,10,10,10" BorderBrush="Black" BorderThickness="1.5" Style="{StaticResource TextBoxStyle2}"/>
        <Button Grid.Column="1" Content="Open document" Margin="100,4,0,0" Style="{StaticResource CustomButtonStyle}" Width="100" Height="20" FontSize="12" VerticalAlignment="Top" Click="OpenInExternalEditor_Click" />
        <Button Grid.Column="1" Content="Create new version" Margin="0,4,35,0" Style="{StaticResource CustomButtonStyle}" Width="120" Height="20" FontSize="12" HorizontalAlignment="Right" Click="CreateNewVersionButton_Click" />
        <Button Grid.Column="1" Margin="0,4,10,0" Style="{StaticResource RefreshButtonStyle}" Width="20" Height="20" FontSize="12" Click="RefreshButton_Click" HorizontalAlignment="Right" />
    </Grid>
</Page>
